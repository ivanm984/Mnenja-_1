# ==========================================
# GEMINI API CONFIGURATION
# ==========================================
# Pridobite API ključ na: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Model za hitro ekstrakcijo podatkov
GEMINI_FAST_MODEL=gemini-2.5-flash

# Model za kompleksno analizo skladnosti
GEMINI_POWERFUL_MODEL=gemini-2.5-pro

# AI Configuration
GEMINI_TEMPERATURE=0.0
GEMINI_TOP_P=0.9
GEMINI_TOP_K=40
GEMINI_MAX_TOKENS=40000
GEMINI_ANALYSIS_CONCURRENCY=3

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# PostgreSQL (OBVEZNO za knowledge base - uporablja JSONB, embeddings, full-text search)
# Za Docker (priporočeno):
DATABASE_URL=postgresql://appuser:apppassword@postgres:5432/compliance_db

# Za lokalni razvoj (če poganjate PostgreSQL zunaj Dockerja):
# DATABASE_URL=postgresql://appuser:apppassword@localhost:5432/compliance_db

# PostgreSQL credentials (za Docker)
POSTGRES_USER=appuser
POSTGRES_PASSWORD=apppassword
POSTGRES_DB=compliance_db
POSTGRES_PORT=5432

# ==========================================
# REDIS CONFIGURATION
# ==========================================
# Za lokalni razvoj (brez gesla):
REDIS_URL=redis://localhost:6379/0

# Za produkcijo (z geslom):
# REDIS_URL=redis://:your_redis_password@localhost:6379/0

# Redis session timeout (v sekundah)
SESSION_TTL_SECONDS=3600

# ==========================================
# SECURITY
# ==========================================
# API Keys (za avtentikacijo) - ločite z vejico
API_KEYS=demo_key_1,demo_key_2,production_key_xyz

# Dovoljeni izvori za CORS (ločite z vejico)
ALLOWED_ORIGINS=http://localhost:3000,https://vasa-domena.si

# Rate limiting (število zahtevkov na minuto)
RATE_LIMIT_PER_MINUTE=10

# ==========================================
# MUNICIPALITY CONFIGURATION
# ==========================================
KNOWLEDGE_DEFAULT_MUNICIPALITY=litija
KNOWLEDGE_DEFAULT_MUNICIPALITY_NAME=Litija

# ==========================================
# GURS API CONFIGURATION
# ==========================================
# GURS API ključ (opcijsko)
GURS_API_KEY=

# GURS URLs
GURS_WMS_URL=https://ipi.eprostor.gov.si/wms-si-gurs-kn/wms
GURS_RASTER_WMS_URL=https://ipi.eprostor.gov.si/wms-si-gurs-dts/wms
GURS_RPE_WMS_URL=https://ipi.eprostor.gov.si/wms-si-gurs-rpe/wms
# ⚠️ POMEMBNO: WFS URL mora imeti '-osnovni' na koncu!
GURS_WFS_URL=https://ipi.eprostor.gov.si/wfs-si-gurs-kn-osnovni/wfs
GURS_GEOCODE_URL=https://prostor.gov.si/ows
GURS_API_TIMEOUT=30

# ==========================================
# MAP CONFIGURATION
# ==========================================
DEFAULT_MAP_CENTER_LON=14.5058
DEFAULT_MAP_CENTER_LAT=46.0569
DEFAULT_MAP_ZOOM=14

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_GURS_MAP=true
ENABLE_REAL_GURS_API=false
# DEBUG mode omogoča dostop do API-jev brez X-API-Key headerja (primerno za lokalni razvoj)
# Za produkcijo nastavite DEBUG=false in konfigurirajte veljavne API_KEYS
DEBUG=true

# ==========================================
# FILE PROCESSING
# ==========================================
# Maksimalna velikost PDF datoteke (v MB)
MAX_PDF_SIZE_MB=50

# Število zahtev, ki se obdelajo v enem sklop (chunk)
ANALYSIS_CHUNK_SIZE=15

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=INFO
LOG_FILE=app.log
